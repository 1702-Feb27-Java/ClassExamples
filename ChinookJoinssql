CREATE VIEW SHORTALBUM AS 
SELECT * FROM chinook.ALBUM
WHERE ALBUMID < 25;

CREATE VIEW SHORTARTIST AS 
SELECT * FROM chinook.ARTIST
WHERE ARTISTID < 25;

SELECT ALB.TITLE AS "ALBUM TITLE", ART.NAME AS "ARTIST NAME", CUST.CUSTOMERID AS "CUSTOMER ID", EMP.EMPLOYEEID AS "EMPLOYEE ID", GENRE.NAME AS "GENRE", INV.INVOICEID AS "INVOICE NUMBER", IL.QUANTITY AS "QUANTITY", MT.NAME AS "MEDIA TYPE", PL.NAME AS "PLAYLIST", TRACK.NAME AS "TRACK NAME"
FROM CHINOOK.ARTIST ART
INNER JOIN CHINOOK.ALBUM ALB
ON ALB.ARTISTID = ART.ARTISTID
INNER JOIN CHINOOK.TRACK TRACK
ON TRACK.ALBUMID = ALB.ALBUMID
INNER JOIN CHINOOK.GENRE GENRE
ON GENRE.GENREID = TRACK.GENREID
INNER JOIN CHINOOK.MEDIATYPE MT
ON MT.MEDIATYPEID = TRACK.MEDIATYPEID
INNER JOIN CHINOOK.INVOICELINE IL
ON IL.TRACKID = TRACK.TRACKID
INNER JOIN CHINOOK.INVOICE INV
ON INV.INVOICEID = IL.INVOICEID
INNER JOIN CHINOOK.CUSTOMER CUST
ON CUST.CUSTOMERID = INV.CUSTOMERID
INNER JOIN CHINOOK.EMPLOYEE EMP
ON EMP.EMPLOYEEID = CUST.SUPPORTREPID
INNER JOIN CHINOOK.PLAYLISTTRACK PT
ON PT.TRACKID = TRACK.TRACKID
INNER JOIN CHINOOK.PLAYLIST PL
ON PL.PLAYLISTID = PT.PLAYLISTID;
